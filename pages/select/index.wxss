/* pages/select/index.wxss */
.selectBox {
  position: absolute;
  left: 50%;
  top: 40%;
  transform: translate(-50%, -50%);
}

.sectionView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 560rpx;
}

.section__title {
  margin-right: 30rpx;
}

picker {
  border: 1px solid #666;
  height: 60rpx;
  line-height: 60rpx;
  width: 65%;
  padding-left: 20rpx;
}

.picker {
  position: relative;
}

.picker image {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%) rotate(90deg);
  width: 14rpx;
  height: 24rpx;
}

.btn {
  text-align: center;
  margin-top: 80rpx;
}

.btn button {
  background: #4378BA;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  height: 88rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
  justify-content: center;
}