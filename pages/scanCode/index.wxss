/* pages/scanCode/index.wxss */
page {
  background-color: #F3F5F7;
}

.scanCode {

}

.weui-button {
  padding: 18rpx 30rpx 22rpx 47rpx;
  background-color: #fff;
}

.weui-button button {
  width: 100% !important;
  background: #F9F9F9;
  border: 1px solid #D9D9D9;
  border-radius: 12rpx;
  line-height: 105rpx;
  padding: 0;
}

.weui-button button view {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: 400;
}

.weui-button button view image {
  width: 33rpx;
  height: 33rpx;
}

.weui-button button view.weui-no-sn {
  justify-content: center;
  color: #9B9B9B;
}

.weui-button button view.weui-no-sn image {
  margin-right: 16rpx;
}

.weui-button button view.weui-sn {
  justify-content: space-between;
  color: #4378BA;
  padding: 0 28rpx 0 40rpx;
}

.weui-cells__title {
  padding: 38rpx 0 31rpx 52rpx;
  font-size: 29rpx;
  color: #3D3C3C;
}

.weui-cell {
  background-color: #fff !important;
  padding: 37rpx 28rpx 38rpx 53rpx !important;
}

picker, input {
  text-align: right;
  font-size: 29rpx;
  color: #000000;
}

.weui-grey {
  color: rgba(0,0,0,0.48);
}

.weui-select {
  padding-right: 30rpx;
  position: relative;
}

.weui-select image {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 12rpx;
  height: 19rpx;
  display: inline-block;
}

.weui-label {
  font-size: 29rpx;
  color: #000000;
}

.roomLists {
  background-color: #fff;
  padding-bottom: 130rpx;
}

.roomLists .list {
  padding: 37rpx 28rpx 38rpx 53rpx;
  text-align: right;
  border-bottom: 1px solid #f7f7f7;
}

.roomLists .list:hover {
  background-color: #eee;
}

.footer_btns {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #FFFFFF;
  box-shadow: 0 -8px 22px 0 rgba(0,0,0,0.15);
  padding: 20rpx 42rpx 20rpx 45rpx;
  width: calc(100% - 87rpx);
}

.footer_btns button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4378BA;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 400;
  width: 100% !important;
}