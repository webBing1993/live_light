/**index.wxss**/
page {
  background-color: #F3F5F7;
}

.container {
  padding: 0 37rpx 130rpx 47rpx;
  display: block;
}

.lists {
  background-color: #fff;
  padding-bottom: 100rpx;
}

.lists .list {
  border-bottom: 1px solid rgba(151,151,151,0.3);
  padding: 34rpx 54rpx 30rpx 54rpx;
  font-size: 29rpx;
  color: #000000;
}

.lists .list:hover {
  background-color: #eee;
}

.noMsgTig {
  background-color: #fff;
  padding: 57rpx 68rpx 70rpx 65rpx;
}

.noMsgTig .steps {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 79rpx;
}

.noMsgTig .steps .step {
  display: inline-flex;
  align-items: center;
}

.noMsgTig .steps .step text:first-of-type {
  background-color: #3484FE;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 100%;
  font-size: 24rpx;
  color: #FFFFFF;
  margin-right: 24rpx;
  text-align: center;
}

.noMsgTig .steps .step text:last-of-type {
  font-size: 22rpx;
  color: #000000;
}

.noMsgTig .steps .line {
  color: #979797;
}

.noMsgTig .noMsg {
  width: 100%;
}

.noMsgTig .noMsg image {
  display: block;
  width: 100%;
}

.footer_btns {
  position: fixed;
  bottom: 0;
  left: 0;
  background: #FFFFFF;
  box-shadow: 0 -8px 22px 0 rgba(0,0,0,0.15);
  padding: 20rpx 42rpx 20rpx 45rpx;
  width: calc(100% - 87rpx);
}

.footer_btns button {
  display: flex;
  align-items: center;
  justify-content: center;
  background: #4378BA;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #FFFFFF;
  height: 88rpx;
  line-height: 88rpx;
  font-weight: 400;
  width: 100% !important;
}

.footer_btns button image {
  margin-right: 13rpx;
  width: 33rpx;
  height: 33rpx;
}